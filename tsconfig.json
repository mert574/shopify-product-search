{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
//    "incremental": true,
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}